            android:exported="true" />

        <!-- SearchActivity -->
        <activity
            android:name="com.example.gotoesig.ui.SearchActivity"
            android:exported="true" />

        <!-- StatisticsActivity -->
        <activity
            android:name="com.example.gotoesig.ui.StatisticsActivity"
            android:exported="true" />

        <!-- TrajetsActivity -->
        <activity
            android:name="com.example.gotoesig.ui.TrajetsActivity"

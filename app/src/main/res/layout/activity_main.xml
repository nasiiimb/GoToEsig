<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- Logo ESIGELEC centrado y un poco más abajo -->
    <ImageView
        android:id="@+id/esigLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/esiglogo" />

    <!-- Título GoToEsig, ahora en grande y centrado, con nueva fuente -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/esigLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/gotoesig"
        android:textColor="#4A148C"
        android:textSize="45sp"
        android:textStyle="bold" />

    <!-- Barra de navegación en la parte inferior con más estilo -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#6A1B9A"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Cuadro para el perfil (icono) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile_vector"
                app:tint="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Cuadro para añadir trayecto (icono) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_24"
                app:tint="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Cuadro para ver trayectos (icono) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/my_trajects_vector"
                app:tint="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Cuadro para buscar trayecto (icono) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/search_vector"
                app:tint="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Cuadro para estadísticas (icono) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/stats_vector"
                app:tint="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
